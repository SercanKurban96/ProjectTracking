@model IEnumerable<ProjectTracking.Models.Employee.EmployeeInformation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.js"></script>

<div class="card">
    <h5 class="card-header">Personel Listesi</h5>
    <div class="card-body">
        <table id="personellist" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeEmail)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.EmployeePassword)
                        </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeImage)
                </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeAuthority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeNameSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeIdentificationNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDepartment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeTask)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.EmployeePhoneNumber)
                    </th>

                    <th>İŞLEMLER</th>

                    <th>
                        @Html.DisplayNameFor(model => model.EmployeePositionDescription)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="mailto:@item.EmployeeEmail">@item.EmployeeEmail</a>
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.EmployeePassword)
                            </td>*@
                        <td>
                            <img src="@item.EmployeeImage" style="width:80px; height:80px" class="rounded-circle"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeAuthority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeNameSurname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeIdentificationNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeDepartment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeTask)
                        </td>

                        <td>
                            <a href="tel:@item.EmployeePhoneNumber">@item.EmployeePhoneNumber</a>
                        </td>

                        <td>
                            <a href="/EmployeeInformations/Edit/@item.EmployeeInformationID" class="btn btn-success"><span class="tf-icons bx bx-edit"></span></a>
                            <a href="/EmployeeInformations/Details/@item.EmployeeInformationID" class="btn btn-primary"><span class="tf-icons bx bx-detail"></span></a>
                            <a href="/EmployeeInformations/Delete/@item.EmployeeInformationID" class="btn btn-danger"><span class="tf-icons bx bx-trash"></span></a>
                            @*<a href="/EmployeeInformations/ActivityHistory/@item.EmployeeInformationID" class="btn btn-warning"><span class="tf-icons bx bx-history"></span></a>*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeePositionDescription)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $('#personellist').DataTable({
        language: {
            info: "_TOTAL_ kayıttan _START_ - _END_ kayıt gösteriliyor.",
            infoEmpty: "Gösterilecek hiç kayıt yok.",
            loadingRecords: "Kayıtlar yükleniyor.",
            zeroRecords: "Tablo boş",
            search: "Arama:",
            infoFiltered: "(toplam _MAX_ kayıttan filtrelenenler)",
            buttons: {
                copyTitle: "Panoya kopyalandı.",
                copySuccess: "Panoya %d satır kopyalandı",
                copy: "Kopyala",
                print: "Yazdır",
            },

            paginate: {
                first: "İlk",
                previous: "Önceki",
                next: "Sonraki",
                last: "Son"
            },
        },
        dom: 'Bfrtip',
        buttons: [
            'copy', 'excel', 'pdf', 'print'
        ],
        responsive: true
    });
</script>